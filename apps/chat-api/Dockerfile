#
# Build the docker image with `npx nx docker-build chat-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t chat-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=1000

WORKDIR /app

RUN addgroup --system chat-api && \
          adduser --system -G chat-api chat-api

COPY apps/chat-api/dist chat-api/
RUN chown -R chat-api:chat-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix chat-api --omit=dev -f install

CMD [ "node", "chat-api" ]
